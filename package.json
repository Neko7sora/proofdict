{
  "name": "proofdict",
  "version": "1.2.1",
  "private": true,
  "description": "Proofdict is a collection of dictionary.",
  "keywords": [
    "dict"
  ],
  "homepage": "https://github.com/proofdict/proofdict",
  "bugs": {
    "url": "https://github.com/proofdict/proofdict/issues"
  },
  "license": "MIT",
  "author": "azu",
  "files": [
    "dict/",
    "public/dict.json",
    "index.js"
  ],
  "main": "index.js",
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/proofdict/proofdict.git"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build --ignore website",
    "clean": "lerna run clean",
    "website": "lerna run build --scope website",
    "prepublish": "yarn run clean && yarn run build",
    "publish": "lerna publish --conventional-commits",
    "test": "lerna run test",
    "prettier": "prettier --write '**/*.{js,jsx,ts,tsx,css}'"
  },
  "dependencies": {},
  "devDependencies": {
    "@alrra/travis-scripts": "^3.0.1",
    "husky": "^1.1.3",
    "lerna": "^3.4.3",
    "lint-staged": "^8.0.4",
    "prettier": "^1.15.1"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "tabWidth": 4
  },
  "workspaces": [
    "website",
    "packages/*",
    "packages/@proofdict/*"
  ],
  "husky": {
    "hooks": {
      "post-commit": "git reset",
      "pre-commit": "lint-staged"
    }
  }
}
